  <body id='' class='forum <?bodyclass?>'>
    <script type="text/javascript">document.body.className += ' have-javascript'</script>
    <div class="container">    

      <div id="search-box">
        <form method="get" action="/search">
          <span id="search-query"><input id="q" name="q" placeholder="Search"></span>
          <span id="search-dropdown"><span class="helper">
              <select id="search-scope" name="scope" size="1">
                <?search-options?>
                </select>
            </span>
          </span>
          <span id="search-submit"><button type="submit"><span>go</span></button></span>
        </form>
      </div>
      
      <p><a href="/"><img src="https://notmuchmail.org/notmuch-logo.png" width="58" height="50" alt="Notmuch logo" class="left" /></a></p>
      <h1>Notmuch Discussion Forum</h1>
      
      <div class="navigation">
        <div class="head">
          <h2>Forums</h2>
          <p><a href="/">Forum Index</a></p>
        </div>
        <ul>
          <li><?category1?>
            <ul>
              <li><a href="<?url1?>"><?title1?></a></li>
              <li><a href="<?url2?>"><?title2?></a></li>
            </ul>
          </li>
          <li>
            <?category2?>
            <ul>
              <li><a href="<?url1?>"><?title1?></a></li>
              <li><a href="<?url2?>"><?title2?></a></li>
            </ul>
          </li>
        </ul>
      </div>

      <div class="" id="content">
        <div class="smallprint" id="tools"><?tools?></div>

        <div id="forum-content"><?content?></div>
        
        <div id="footernav">
          <a href="#top" title="Jump to the top of the page">Top</a> |
	  <a href="/">Forum index</a> |
	  <a href="/help#about">About this forum</a>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript"><?extrajs?></script>
    <script type="text/javascript" src="<?static:/js/dfeed.js?>"></script>
  </body>
</html>
